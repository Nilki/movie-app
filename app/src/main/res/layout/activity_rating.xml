<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".RatingActivity">

    <LinearLayout

        android:id="@+id/linearLayout"
        android:layout_width="287dp"
        android:layout_height="554dp"
        android:background="@drawable/button_background_rate"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.338">

        <ScrollView

            android:id="@+id/rating_scroll"
            android:layout_width="238dp"
            android:layout_height="497dp"
            android:layout_gravity="center">

            <LinearLayout

                android:id="@+id/rating_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/find_movie_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_background"
                    android:fontFamily="@font/carter_one"
                    android:gravity="center"
                    android:onClick="FindMovie"
                    android:text="@string/find_movie_in_imdb"
                    android:textSize="14sp"
                    app:backgroundTint="#14FFEB3B" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <ImageView

        android:layout_width="78dp"
        android:layout_height="77dp"
        android:contentDescription="@string/reg_img"
        android:rotation="20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.897"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.006"
        app:srcCompat="@drawable/rating" />

</androidx.constraintlayout.widget.ConstraintLayout>
